#!/usr/bin/env bash

set -eu
set -o pipefail

if [ "$#" -lt 1 ]; then
  echo "USAGE: $0 vX.Y.Z"
  exit 1
fi

BUILD_DIR="$PWD"
CACHE_DIR="$PWD/.cache"

METABASE_VERSION="$1"
METABASE_URL="http://downloads.metabase.com/$METABASE_VERSION/metabase.jar"

echo "--> Saving $METABASE_VERSION to 'metabase-version'... "
printf "%s" "$METABASE_VERSION" > "$BUILD_DIR/metabase-version"

echo "--> Testing 'bin/detect'... "
./bin/detect "$BUILD_DIR"

echo "--> Testing 'bin/compile'... "
./bin/compile "$BUILD_DIR" "$CACHE_DIR"

echo "--> Committing... "
git commit -m "Deploy $METABASE_VERSION" "$BUILD_DIR/metabase-version"

echo "--> Tagging... "
git tag "$METABASE_VERSION"

echo "--> Pushing... "
git push
git push --tags origin master
